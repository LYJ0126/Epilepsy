.epilepsy1_image {
  width:100%;
  height:450rpx;
  background-color:floralwhite;
}

.container {
    padding: 20rpx;
}
  
.control-btn {
  background-color: #4CAF50;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.control-btn.active {
  background-color: #f44336;
}

.status-indicator {
  margin-top: 20rpx;
}

.status-text {
  color: #666;
  font-size: 28rpx;
}

.result-panel {
  margin-top: 40rpx;
  width: 90%;
}

.result-card {
  background: #f5f8e7;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
    margin-top: 0%;
}

.result-text {
  font-size: 44rpx;
}

.probability {
  display: block;
  margin-top: 16rpx;
  color: #666;
  font-size: 32rpx;
}

.waveform-panel {
  margin-top: 40rpx;
}

.waveform-title {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 20rpx;
}

.waveform-image {
  width: 100%;
  margin-top: 20rpx;
}

.waveform-scroll {
    width: 100%;
    height: 60vh; /* 可视区域高度 */
    margin-top: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
  }
  
  .waveform-image {
    width: 90%;
    display: block;
    margin: 0 auto;
    padding: 20rpx 0;
  }

  .control-btn[disabled] {
    opacity: 0.6;
  }
  
  .time-text {
    display: block;
    margin-top: 10rpx;
    color: #666;
    font-size: 24rpx;
  }
  
  .no-data {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 300rpx;
    color: #999;
  }