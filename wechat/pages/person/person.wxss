.container {
    padding: 15px;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .header {
    margin-bottom: 20px;
    text-align: center;
  }
  
  .title {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 5px;
  }
  
  .update-time {
    font-size: 12px;
    color: #888;
  }
  
  .info-card {
    background-color: #fff;
    border-radius: 10px;
    padding: 15px;
    margin-bottom: 15px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  
  .card-title {
    font-size: 16px;
    font-weight: bold;
    color: #4CAF50;
    margin-bottom: 15px;
    padding-bottom: 8px;
    border-bottom: 1px solid #eee;
  }
  
  .info-item {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    padding: 5px 0;
  }
  
  .info-label {
    width: 80px;
    color: #666;
    font-size: 14px;
  }
  
  .info-value {
    flex: 1;
    font-size: 14px;
    color: #333;
  }
  
  input.info-value {
    border: 1px solid #ddd;
    padding: 5px 8px;
    border-radius: 4px;
  }
  
  .bmi-status {
    margin-left: 10px;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 12px;
    background-color: #4CAF50;
    color: white;
  }
  
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
  }
  
  button {
    flex: 1;
    max-width: 120px;
  }