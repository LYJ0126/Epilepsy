/* pages/aiagent/aiagent.wxss */
:root {
    /* 浅色主题变量 */
    --primaryColor: #1890ff;
    --secondaryColor: #52c41a;
    --dangerColor: #ff4d4f;
    --warningColor: #ffc53d;
    --textColor: #333;
    --textSecondary: #666;
    --background: #f5f5f5;
    --cardBackground: #ffffff;
    --borderColor: #e8e8e8;
  }
  
  @media (prefers-color-scheme: dark) {
    :root {
      /* 深色主题变量 */
      --primaryColor: #096dd9;
      --secondaryColor: #389e0d;
      --dangerColor: #d9363e;
      --warningColor: #d48806;
      --textColor: #f0f0f0;
      --textSecondary: #bfbfbf;
      --background: #141414;
      --cardBackground: #1f1f1f;
      --borderColor: #303030;
    }
  }

.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--background);
}

.chat-history {
  flex: 1;
  padding: 20rpx;
  background-color: var(--cardBackground);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chat-bubble {
  display: flex;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar image {
  width: 60rpx;
  height: 60rpx;
}

.bubble-content {
  flex: 1;
}

.message {
  padding: 20rpx;
  border-radius: 16rpx;
  position: relative;
  max-width: 80%;
  line-height: 1.6;
}

.user .message {
  background-color: #e6f7ff;
  border-top-right-radius: 4rpx;
}

.assistant .message {
  background-color: #f6ffed;
  border-top-left-radius: 4rpx;
}

.timestamp {
  font-size: 24rpx;
  color: var(--textSecondary);
  margin-top: 8rpx;
  text-align: right;
}

.structured-answer {
  margin-top: 20rpx;
  border-top: 1rpx solid var(--borderColor);
  padding-top: 20rpx;
}

.risk-level {
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: inline-block;
}

.risk-level.risk-red {
  background-color: var(--dangerColor);
}

.risk-level.risk-yellow {
  background-color: var(--warningColor);
  color: #333;
}

.risk-level.risk-green {
  background-color: var(--secondaryColor);
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
  color: var(--primaryColor);
  font-size: 30rpx;
}

.section-content {
  display: block;
  line-height: 1.6;
  font-size: 28rpx;
}

.timeout-warning {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #d48806;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.warning-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.warning-text {
  font-weight: bold;
  margin-bottom: 5rpx;
}

.hint-text {
  font-size: 26rpx;
}

.input-area {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--borderColor);
  align-items: center;
}

.question-input {
  flex: 1;
  border: 1rpx solid var(--borderColor);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  background-color: var(--cardBackground);
  font-size: 30rpx;
  height: 80rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #bfbfbf;
}

.send-btn {
  background-color: var(--primaryColor);
  color: white;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.send-btn-hover {
  background-color: #40a9ff;
}

.send-icon {
  width: 50rpx;
  height: 50rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--cardBackground);
  border: 1rpx solid var(--borderColor);
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.emergency-btn {
  background-color: #fff1f0;
  border-color: #ffccc7;
  color: var(--dangerColor);
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .user .message {
    background-color: #113049;
  }
  
  .assistant .message {
    background-color: #1d371c;
  }
  
  .question-input {
    background-color: var(--cardBackground);
    color: var(--textColor);
  }
  
  .action-btn {
    background-color: #2a2a2a;
  }
  
  .emergency-btn {
    background-color: #2a1215;
    border-color: #58181c;
  }
}